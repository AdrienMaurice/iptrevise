{% extends '@App/default/base.html.twig' %}

{% set default_entity_show = 'default_machine_show' %}

{% block title %}
    {{ 'default.machine.show.title %name%'|trans({'%name%': machine.label})}} Â· {{ parent() }}
{% endblock title %}

{% block headline %}
    {{ 'default.machine.show.title %name%'|trans({'%name%': machine.label})}}
{% endblock headline %}

{% block content_settings %}
    <div class="panel panel-primary" id="administration-global-information">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'administration.global-information' | trans }}</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-10">
                    <dl class="dl-horizontal">
                        <dt class="lead">{{ 'form.machine.field.label'| trans }}</dt>
                        <dd class="lead">{{ machine.label }}</dd>
                        <dt>{{ 'form.machine.field.interface'| trans }}</dt>
                        <dd>{{ machine.interface }}</dd>
                        <dt>{{ 'form.machine.field.description'| trans }}</dt>
                        <dd>{{ machine.description }}</dd>
                        <dt>{{ 'form.machine.field.creator'| trans }}</dt>
                        <dd>{{ machine.creator.label }}</dd>
                    </dl>
                </div>
                <div class="col-sm-2 text-right">
                    <span class="fa fa-desktop fa-4x"></span>
                </div>
            </div>
        </div>
        {% if machine.ips.count %}
            <table class="table">
                <thead>
                <tr>
                    <th id="machine-ip-ip">
                        <span class="fa fa-indent fa-fw"></span>
                        {{ 'form.ip.field.ip' | trans }}
                    </th>
                    <th id="machine-ip-network-label">
                        <span class="fa fa-sitemap fa-fw"></span>
                        {{ 'form.ip.field.network' | trans }}
                    </th>
                    <th id="machine-ip-creator">
                        <span class="fa fa-user fa-fw"></span>
                        {{ 'form.ip.field.creator' | trans }}
                    </th>
                    <th id="machine-ip-actions">
                        {{ 'default.network.actions' | trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for ip in machine.ips %}
                    <tr>
                        <td headers="machine-ip-ip">{{ ip.ip | ip }}</td>
                        <td headers="machine-ip-network-label">
                            <a href="{{ path('default_network_show', {'id': ip.network.id}) }}" title="{{ ip.network.label }}">
                                {{ ip.network.label }}
                            </a>
                        </td>
                        <td headers="machine-ip-machine-creator">
                            {{ ip.creator.label }}
                        </td>
                        <td headers="machine-ip-actions">
                            <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'default.ip.manage %ip%' | trans({'%ip%': ip.ip | ip}) }}">
                                <button href="#" data-toggle="tooltip" title="{{ 'default.ip.action.edit' | trans }}" class="btn btn-info">
                                    <span class="fa fa-pencil"></span>
                                    <span class="sr-only">{{ 'default.action.edit' | trans }}</span>
                                </button>
                                {% if ip.machine %}
                                    <a href="{{ path ('default_network_unlink', {'id': ip.id}) }}" data-toggle="tooltip" title="{{ 'default.ip.action.dissociate' | trans }}" class="btn btn-warning ">
                                        <span class="fa fa-unlink"></span>
                                        <span class="sr-only">{{ 'default.ip.action.dissociate' | trans }}</span>
                                    </a>
                                {% else %}
                                    <button href="#" data-toggle="tooltip" title="{{ 'default.ip.action.associate' | trans }}" class="btn btn-info">
                                        <span class="fa fa-link"></span>
                                        <span class="sr-only">{{ 'default.ip.action.associate' | trans }}</span>
                                    </button>
                                    <button href="#" data-toggle="tooltip" title="{{ 'default.ip.action.create' | trans }}" class="btn btn-info">
                                        <span class="fa fa-plus"></span>
                                        <span class="sr-only">{{ 'default.ip.action.create' | trans }}</span>
                                    </button>
                                {% endif %}
                                <button href="#" data-toggle="tooltip" title="{{ 'default.ip.action.delete' | trans }}" class="btn btn-danger">
                                    <span class="fa fa-trash-o"></span>
                                    <span class="sr-only">{{ 'default.ip.action.delete' | trans }}</span>
                                </button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock content_settings %}

{% block content_action %}
    <h3>{{ 'administration.actions' | trans }}</h3>

    <div class="text-center" id="default-actions">
        <div class="btn-group-vertical">
            <a class="btn-mini btn btn-default" href="{{ path('default_machine_index') }}">
                <span class="fa fa-desktop"></span>&nbsp;{{ 'machine.actions.back.list' | trans }}
            </a>
            <a class="btn-mini btn btn-default" href="{{ path('default_machine_edit', { 'id': machine.id }) }}">
                <span class="fa fa-pencil"></span>&nbsp;{{ 'administration.actions.edit' | trans }}
            </a>
            {% if isDeletable %}
                <a class="btn btn-danger btn-mini confirm-delete" data-toggle="modal" data-target="#confirm-delete" data-form="form" href="#">
                    <span class="fa fa-trash-o"></span>&nbsp;{{ 'administration.actions.delete' | trans }}
                </a>
            {% else %}
                <span class="btn btn-danger disabled">
            <span class="fa fa-trash-o"></span>&nbsp;{{ 'administration.actions.delete' | trans }}
        </span>
            {% endif %}
        </div>
    </div>
{% endblock content_action %}
